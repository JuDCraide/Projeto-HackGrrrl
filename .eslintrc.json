{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier"
    ],
    "rules": {
      "import/extensions": [
	      "error",
	      "ignorePackages"
      ],
      "no-use-before-define": "off",
      "react/react-in-jsx-scope": "off",
      "prettier/prettier": "error"
    }
}
